<div class="container-fluid">
  <h1 class="mb-4">Quản lý Model 3D</h1>
  
  <% if (messages && messages.success) { %>
    <div class="alert alert-success alert-dismissible fade show">
      <%= messages.success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if (messages && messages.error) { %>
    <div class="alert alert-danger alert-dismissible fade show">
      <%= messages.error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <div class="d-flex justify-content-between align-items-center mb-3">
    <p>Tổng số: <strong><%= models ? models.length : 0 %></strong> model</p>
    <a href="/admin/model3d/create" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Thêm Model 3D mới
    </a>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm align-middle">
      <thead class="table-light">
        <tr>
          <th style="width: 100px;">ID</th>
          <th style="width: 120px;">Tên</th>
          <th style="width: 80px;">Tác giả</th>
          <th style="width: 110px;">URL</th>
          <th style="width: 90px;">Vị trí</th>
          <th style="width: 90px;">Xoay</th>
          <th style="width: 90px;">Kích thước</th>
          <th style="width: 100px;">Tạo lúc</th>
          <th style="width: 70px;">Thao tác</th>
        </tr>
      </thead>
      <tbody>
        <% if (models && models.length > 0) { %>
          <% models.forEach(model => { %>
            <tr>
              <td>
                <div class="expandable-cell" onclick="toggleCell(this)">
                  <div class="cell-content collapsed">
                    <span class="text-truncate d-inline-block" style="max-width: 95px;"><%= model.id %></span>
                  </div>
                  <div class="cell-content expanded">
                    <span class="text-break"><%= model.id %></span>
                  </div>
                </div>
              </td>
              <td>
                <div class="expandable-cell" onclick="toggleCell(this)">
                  <div class="cell-content collapsed">
                    <span class="text-truncate d-inline-block" style="max-width: 115px;"><%= model.name %></span>
                  </div>
                  <div class="cell-content expanded">
                    <span class="text-break"><%= model.name %></span>
                  </div>
                </div>
              </td>
              <td>
                <div class="expandable-cell" onclick="toggleCell(this)">
                  <div class="cell-content collapsed">
                    <span class="text-truncate d-inline-block" style="max-width: 75px;"><%= model.author || 'Không có' %></span>
                  </div>
                  <div class="cell-content expanded">
                    <span class="text-break"><%= model.author || 'Không có' %></span>
                  </div>
                </div>
              </td>
              <td>
                <% if (model.url) { %>
                  <div class="expandable-cell" onclick="toggleCell(this)">
                    <div class="cell-content collapsed">
                      <span class="text-truncate d-inline-block" style="max-width: 105px;"><%= model.url %></span>
                    </div>
                    <div class="cell-content expanded">
                      <span class="text-break"><%= model.url %></span>
                    </div>
                  </div>
                <% } else { %>
                  <span class="badge bg-secondary">Không có</span>
                <% } %>
              </td>
              <td>
                <div class="expandable-cell" onclick="toggleCell(this)">
                  <div class="cell-content collapsed">
                    <div class="position-data">
                      <small>X: <%= parseFloat(model.position_x || 0).toFixed(1) %></small>
                      <small>Y: <%= parseFloat(model.position_y || 0).toFixed(1) %></small>
                      <small>Z: <%= parseFloat(model.position_z || 0).toFixed(1) %></small>
                    </div>
                  </div>
                  <div class="cell-content expanded">
                    <div class="position-data-full">
                      <div>X: <%= model.position_x || '0' %></div>
                      <div>Y: <%= model.position_y || '0' %></div>
                      <div>Z: <%= model.position_z || '0' %></div>
                    </div>
                  </div>
                </div>
              </td>
              <td>
                <div class="expandable-cell" onclick="toggleCell(this)">
                  <div class="cell-content collapsed">
                    <div class="position-data">
                      <small>X: <%= parseFloat(model.rotation_x || 0).toFixed(0) %>°</small>
                      <small>Y: <%= parseFloat(model.rotation_y || 0).toFixed(0) %>°</small>
                      <small>Z: <%= parseFloat(model.rotation_z || 0).toFixed(0) %>°</small>
                    </div>
                  </div>
                  <div class="cell-content expanded">
                    <div class="position-data-full">
                      <div>X: <%= model.rotation_x || '0' %>°</div>
                      <div>Y: <%= model.rotation_y || '0' %>°</div>
                      <div>Z: <%= model.rotation_z || '0' %>°</div>
                    </div>
                  </div>
                </div>
              </td>
              <td>
                <div class="expandable-cell" onclick="toggleCell(this)">
                  <div class="cell-content collapsed">
                    <div class="position-data">
                      <small>X: <%= parseFloat(model.scale_x || 1).toFixed(1) %></small>
                      <small>Y: <%= parseFloat(model.scale_y || 1).toFixed(1) %></small>
                      <small>Z: <%= parseFloat(model.scale_z || 1).toFixed(1) %></small>
                    </div>
                  </div>
                  <div class="cell-content expanded">
                    <div class="position-data-full">
                      <div>X: <%= model.scale_x || '1' %></div>
                      <div>Y: <%= model.scale_y || '1' %></div>
                      <div>Z: <%= model.scale_z || '1' %></div>
                    </div>
                  </div>
                </div>
              </td>
              <td>
                <div class="expandable-cell" onclick="toggleCell(this)">
                  <div class="cell-content collapsed">
                    <div class="small">
                      <%= new Date(model.created_at).toLocaleDateString('vi-VN', {day: '2-digit', month:'2-digit'}) %>
                      <small class="d-block text-muted">
                        <%= new Date(model.created_at).toLocaleTimeString('vi-VN', {hour: '2-digit', minute:'2-digit'}) %>
                      </small>
                    </div>
                  </div>
                  <div class="cell-content expanded">
                    <div class="small">
                      <%= new Date(model.created_at).toLocaleString('vi-VN') %>
                    </div>
                  </div>
                </div>
              </td>
              <td>
                <div class="btn-group btn-group-sm" role="group">
                  <a href="/admin/model3d/edit/<%= model.id %>" class="btn btn-sm btn-outline-info" title="Chỉnh sửa">
                    <i class="bi bi-pencil"></i>
                  </a>
                  <button 
                    onclick="confirmDelete('<%= model.id %>', '<%= model.name %>')" 
                    class="btn btn-sm btn-outline-danger"
                    title="Xóa">
                    <i class="bi bi-trash"></i>
                  </button>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="9" class="text-center">Không có model 3D nào.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<style>
.table {
  font-size: 0.875rem;
}

.expandable-cell {
  cursor: pointer;
  position: relative;
  width: 100%;
}

.cell-content.expanded {
  display: none;
  padding: 8px 4px;
  background-color: #f8f9fa;
  border-radius: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  z-index: 100;
}

.expandable-cell.active .cell-content.collapsed {
  display: none;
}

.expandable-cell.active .cell-content.expanded {
  display: block;
}

.position-data {
  display: flex;
  flex-direction: column;
  font-size: 0.75rem;
  line-height: 1.2;
}

.position-data-full {
  font-size: 0.8rem;
  line-height: 1.4;
}

.btn-group .btn {
  padding: 0.15rem 0.4rem;
}

/* Hiệu ứng khi hover vào ô có thể mở rộng */
.expandable-cell:hover .cell-content.collapsed {
  background-color: rgba(0, 123, 255, 0.1);
}
</style>

<script>
// Đóng tất cả các ô đã mở rộng khác khi click ra ngoài
document.addEventListener('click', function(event) {
  if (!event.target.closest('.expandable-cell')) {
    const activeExpandables = document.querySelectorAll('.expandable-cell.active');
    activeExpandables.forEach(cell => {
      cell.classList.remove('active');
    });
  }
});

// Hàm chuyển đổi trạng thái hiển thị ô
function toggleCell(cell) {
  // Ngăn sự kiện click lan ra ngoài
  event.stopPropagation();
  
  // Đóng tất cả các ô đang mở khác
  const activeExpandables = document.querySelectorAll('.expandable-cell.active');
  activeExpandables.forEach(activeCell => {
    if (activeCell !== cell) {
      activeCell.classList.remove('active');
    }
  });
  
  // Chuyển đổi trạng thái của ô hiện tại
  cell.classList.toggle('active');
}

function confirmDelete(id, name) {
  // Ngăn sự kiện click lan ra ngoài
  event.stopPropagation();
  
  if (confirm(`Bạn có chắc chắn muốn xóa model "${name}"?`)) {
    // Hiển thị thông báo loading
    const loadingToast = document.createElement('div');
    loadingToast.className = 'position-fixed top-50 start-50 translate-middle bg-dark text-white p-3 rounded d-flex align-items-center';
    loadingToast.style.zIndex = '1050';
    loadingToast.innerHTML = '<div class="spinner-border spinner-border-sm me-2" role="status"></div><span>Đang xóa model...</span>';
    document.body.appendChild(loadingToast);
    
    fetch(`/admin/model3d/${id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      // Xóa thông báo loading
      document.body.removeChild(loadingToast);
      
      if (data.success) {
        alert('Xóa model thành công!');
        window.location.reload();
      } else {
        alert(`Lỗi: ${data.message}`);
      }
    })
    .catch(error => {
      // Xóa thông báo loading
      document.body.removeChild(loadingToast);
      alert(`Lỗi: ${error.message}`);
    });
  }
}
</script>