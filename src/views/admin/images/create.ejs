<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h2>Thêm ảnh mới</h2>
        </div>
        <div class="card-body">
          <% if (error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show">
              <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
          
          <form action="/admin/images/create" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name" class="form-label">Tên ảnh <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            
            <div class="mb-3">
              <label for="frameUse" class="form-label">Số Frame <span class="text-danger">*</span></label>
              <input type="number" class="form-control" id="frameUse" name="frameUse" required min="1">
              <small class="text-muted">Mỗi frame chỉ được gán cho một ảnh</small>
            </div>
            
            <div class="mb-3">
              <label for="image" class="form-label">Upload ảnh ( kích thước < 10mb )</label>
              <input type="file" class="form-control" id="image" name="image" accept="image/*">
              <small class="text-muted">Để trống nếu bạn chưa có ảnh (client sẽ hiển thị ảnh mặc định)</small>
            </div>
            
            <div class="d-flex justify-content-between">
              <a href="/admin/images" class="btn btn-secondary">Hủy</a>
              <button type="submit" class="btn btn-primary">Lưu ảnh</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>